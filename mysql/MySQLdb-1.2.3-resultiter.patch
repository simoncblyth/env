+	for (i=0; i<n; i++) {
+		PyObject *t;
+                type   =  (long) fields[i].type ;
+                length =  (long) fields[i].length ;
+                nptype =  mysql2np( type ) ;
+
+                if( type == MYSQL_TYPE_VAR_STRING || type == MYSQL_TYPE_STRING ) { 
+                    sprintf( nptype_ , nptype , length ) ;                   
